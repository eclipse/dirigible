<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.eclipse.dirigible.releng</groupId>
		<artifactId>org.eclipse.dirigible.releng.parent</artifactId>
		<version>2.0.150424</version>
		<relativePath>../pom.xml</relativePath>
	</parent>

	<artifactId>dirigible-runtime-tomcat</artifactId>
	<packaging>war</packaging>

	<build>
		<plugins>
			<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
			</plugin>
			<plugin>
				<artifactId>maven-eclipse-plugin</artifactId>
				<configuration>
					<wtpversion>1.5</wtpversion>
				</configuration>
			</plugin>
			
			<plugin>
				<artifactId>maven-dependency-plugin</artifactId>
				<executions>
					 <execution>
					 	<id>external</id>
						<phase>compile</phase>
						<goals>
							<goal>unpack-dependencies</goal>
						</goals>
						<configuration>
							<outputDirectory>${project.build.directory}/${deployment.name}/WEB-INF/</outputDirectory>
							<includeArtifactIds>org.eclipse.dirigible.external.p2</includeArtifactIds>
						</configuration>
					</execution>
					<execution>
						<id>repository</id>
						<phase>compile</phase>
						<goals>
							<goal>unpack-dependencies</goal>
						</goals>
						<configuration>
							<outputDirectory>${project.build.directory}/${deployment.name}/WEB-INF/</outputDirectory>
							<includeArtifactIds>org.eclipse.dirigible.repository.p2</includeArtifactIds>
						</configuration>
					</execution>
					
					<execution>
						<id>runtime</id>
						<phase>compile</phase>
						<goals>
							<goal>unpack-dependencies</goal>
						</goals>
						<configuration>
							<outputDirectory>${project.build.directory}/${deployment.name}/WEB-INF/</outputDirectory>
							<includeArtifactIds>org.eclipse.dirigible.runtime.p2</includeArtifactIds>
						</configuration>
					</execution>
					
					<execution>
						<id>lib</id>
						<phase>compile</phase>
						<goals>
							<goal>unpack-dependencies</goal>
						</goals>
						<configuration>
							<outputDirectory>${project.build.directory}/lib</outputDirectory>
							<includeArtifactIds>org.eclipse.dirigible.lib.p2</includeArtifactIds>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
	
 	<dependencies>
		<dependency>
			<groupId>org.eclipse.dirigible.p2.external</groupId>
			<artifactId>org.eclipse.dirigible.external.p2</artifactId>
			<version>${project.version}</version>
			<type>eclipse-repository</type>
		</dependency>
		<dependency>
			<groupId>org.eclipse.dirigible.p2.repository</groupId>
			<artifactId>org.eclipse.dirigible.repository.p2</artifactId>
			<version>${project.version}</version>
			<type>eclipse-repository</type>
		</dependency>
		<dependency>
			<groupId>org.eclipse.dirigible.p2.runtime</groupId>
			<artifactId>org.eclipse.dirigible.runtime.p2</artifactId>
			<version>${project.version}</version>
			<type>eclipse-repository</type>
		</dependency>
		
		<dependency>
			<groupId>org.eclipse.dirigible.p2.lib</groupId>
			<artifactId>org.eclipse.dirigible.lib.p2</artifactId>
			<version>${project.version}</version>
			<type>eclipse-repository</type>
		</dependency>




		<dependency>
			<groupId>javax.servlet</groupId>
			<artifactId>javax.servlet-api</artifactId>
			<version>3.1.0</version>
			<type>jar</type>
			<scope>provided</scope>
		</dependency>
  		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-api</artifactId>
			<version>1.7.2</version>
			<type>jar</type>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-log4j12</artifactId>
			<version>1.7.2</version>
			<type>jar</type>
			<scope>compile</scope>
		</dependency>
 		<dependency>
			<groupId>org.jsoup</groupId>
			<artifactId>jsoup</artifactId>
			<version>1.7.2</version>
			<type>jar</type>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>org.apache.directory.studio</groupId>
			<artifactId>org.apache.commons.lang</artifactId>
			<version>2.6</version>
			<type>jar</type>
			<scope>compile</scope>
		</dependency>
	 
	 	
 	</dependencies>
</project>
