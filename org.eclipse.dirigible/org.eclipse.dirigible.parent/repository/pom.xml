<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.eclipse.dirigible</groupId>
		<artifactId>org.eclipse.dirigible.parent</artifactId>
		<version>2.7.170109</version>
		<relativePath>../pom.xml</relativePath>
	</parent>

	<name>Repository - Parent</name>
	<groupId>org.eclipse.dirigible.repository</groupId>
	<artifactId>org.eclipse.dirigible.repository.parent</artifactId>
	<packaging>pom</packaging>
	<url>http://www.dirigible.io</url>

	<organization>
		<name>SAP AG</name>
		<url>http://www.sap.com</url>
	</organization>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>

	<build>
		<plugins>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>target-platform-configuration</artifactId>
				<version>${tycho-version}</version>
				<configuration>
					<resolver>p2</resolver>
					<pomDependencies>consider</pomDependencies>
					<ignoreTychoRepositories>true</ignoreTychoRepositories>
					<target>
						<artifact>
							<groupId>org.eclipse.dirigible.platform</groupId>
							<artifactId>org.eclipse.dirigible.platform.target</artifactId>
							<version>2.7.170109</version>
							<classifier>org.eclipse.dirigible.platform.base</classifier>
						</artifact>
					</target>
					<environments>
						<environment>
							<os>win32</os>
							<ws>win32</ws>
							<arch>x86</arch>
						</environment>
						<environment>
							<os>win32</os>
							<ws>win32</ws>
							<arch>x86_64</arch>
						</environment>
						<environment>
							<os>linux</os>
							<ws>gtk</ws>
							<arch>x86</arch>
						</environment>
						<environment>
							<os>linux</os>
							<ws>gtk</ws>
							<arch>x86_64</arch>
						</environment>
						<environment>
							<os>macosx</os>
							<ws>cocoa</ws>
							<arch>x86_64</arch>
						</environment>
					</environments>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-maven-plugin</artifactId>
				<version>${tycho-version}</version>
				<extensions>true</extensions>
			</plugin>
		</plugins>
	</build>

	<modules>
		<module>org.eclipse.dirigible.repository.api</module>
		<module>org.eclipse.dirigible.repository.test</module>
		<module>org.eclipse.dirigible.repository.zip</module>
		<module>org.eclipse.dirigible.repository.db.init</module>
		<module>org.eclipse.dirigible.repository.db</module>
		<module>org.eclipse.dirigible.repository.db.test</module>
		<module>org.eclipse.dirigible.repository.ext</module>
		<module>org.eclipse.dirigible.repository.ext.test</module>
		<module>org.eclipse.dirigible.repository.rcp</module>
		<module>org.eclipse.dirigible.repository.logging</module>
		<module>org.eclipse.dirigible.repository.local</module>
		<module>org.eclipse.dirigible.repository.local.test</module>
		<module>org.eclipse.dirigible.repository.git</module>
		<module>org.eclipse.dirigible.repository.velocity</module>
		<module>org.eclipse.dirigible.repository.datasource</module>
		<module>org.eclipse.dirigible.repository.datasource.dialects</module>
	</modules>

</project>
