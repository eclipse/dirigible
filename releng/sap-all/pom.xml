		<!-- MAIL -->
		<dependency>
			<groupId>org.eclipse.dirigible</groupId>
			<artifactId>dirigible-mail</artifactId>
			<version>6.3.21</version>
		</dependency>

		<!-- IDE Plugins -->
		<dependency>
		 	<groupId>org.eclipse.dirigible</groupId>
		 	<artifactId>dirigible-ide</artifactId>
		 	<version>6.3.21</version>
		 	<exclusions>
		 		<exclusion>
		 			<artifactId>dirigible-ide-ui-git</artifactId>
		 			<groupId>org.eclipse.dirigible</groupId>
