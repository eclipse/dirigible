NC='\033[0m' # No Color
RED='\033[0;31m'
GREEN='\033[0;32m'

echo "${GREEN} Checking code formatting..."
mvn formatter:validate > /dev/null

status=$?
([ $status -eq 0 ] && echo "${GREEN} Formatting is OK ${NC}") || (echo "${RED} Formatting error: run mvn formatter:format and commit new changes ${NC}" && exit 1)
