<hibernate-mapping>

    <class entity-name="Customer" >

        <id name="id"
            type="long"
            column="ID">
            <generator class="sequence"/>
        </id>

        <property name="name"
            column="NAME"
            type="string"/>

        <property name="address"
            column="ADDRESS"
            type="string"/>

    </class>
    
</hibernate-mapping>