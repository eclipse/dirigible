<!DOCTYPE HTML>
<html lang="en" xmlns="http://www.w3.org/1999/xhtml" ng-app="page" ng-controller="PageController">

    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="icon" href="data:;base64,iVBORw0KGgo=" dg-brand-icon />
        <title dg-brand-title></title>
        <theme></theme>
        <script type="text/javascript"
            src="/services/js/resources-core/services/loader.js?id=application-view-js"></script>
        <link type="text/css" rel="stylesheet"
            href="/services/js/resources-core/services/loader.js?id=application-view-css" />
        <script type="text/javascript" src="controller.js"></script>
    </head>

    <body class="dg-vbox">
        <fd-scrollbar class="dg-full-height">
            <div class="fd-margin--md fd-message-strip fd-message-strip--error fd-message-strip--dismissible"
                role="alert" ng-show="errorMessage">
                <p class="fd-message-strip__text">{{ errorMessage }}</p>
                <fd-button glyph="sap-icon--decline" compact="true" dg-type="transparent" aria-label="Close" in-msg-strip="true" ng-click="clearErrorMessage()">
		        </fd-button>
            </div>

            <fd-fieldset class="fd-margin--md" ng-form="formFieldset">
                <fd-form-group dg-header="${name} Details" name="entityForm" class="fd-container fd-form-layout-grid-container fd-form-group">
#foreach ($property in $properties)
#if($property.widgetType == "DROPDOWN")
                    <fd-form-item class="fd-row fd-form-item">
                    	<div class="fd-col fd-col-md--2">
                        	<fd-form-label for="id${property.name}" dg-required="${property.dataNotNull}" dg-colon="true">${property.widgetLabel}</fd-form-label>
                        </div>
                        <div class="fd-col fd-col-md--8">
	                        <fd-combobox-input id="id${property.name}"
	                            name="${property.name}"
	                            ng-required="true"
	                            ng-model="entity.${property.name}"
	                            dg-disabled="true"
	                            dropdown-items="options${property.name}"
	                            dg-placeholder="Search ${property.widgetLabel} ...">
	                        </fd-combobox-input>
	                    </div>
                    </fd-form-item>
#elseif($property.widgetType == "CHECKBOX")
                    <fd-form-item class="fd-row fd-form-item">
                    	<div class="fd-col fd-col-md--2">
	                        <fd-checkbox id="id${property.name}" compact="false" ng-required="${property.dataNotNull}" ng-model="entity.${property.name}"></fd-checkbox>
	                    </div>
	                    <div class="fd-col fd-col-md--8">
                        	<fd-checkbox-label for="id${property.name}" dg-required="${property.dataNotNull}">${property.widgetLabel}</fd-checkbox-label>
                        </div>
                    </fd-form-item>
#elseif($property.widgetType == "COLOR")
                    <fd-form-item class="fd-row fd-form-item">
                    	<div class="fd-col fd-col-md--2">
                        	<fd-form-label for="id${property.name}" dg-required="${property.dataNotNull}" dg-colon="true">${property.widgetLabel}</fd-form-label>
                        </div>
                        <div class="fd-col fd-col-md--4">
	                        <fd-input id="id${property.name}"
	                            name="${property.name}"
	                            ng-required="${property.dataNotNull}"
	                            ng-model="entity.${property.name}"
	                            ng-readonly="true"
	                            type="color"
	                            placeholder="Enter ${property.widgetLabel}">
	                        </fd-input>
	                    </div>
                    </fd-form-item>
#elseif($property.widgetType == "NUMBER")
                    <fd-form-item class="fd-row fd-form-item">
                    	<div class="fd-col fd-col-md--2">
                        	<fd-form-label for="id${property.name}" dg-required="${property.dataNotNull}" dg-colon="true">${property.widgetLabel}</fd-form-label>
                        </div>
                        <div class="fd-col fd-col-md--4">
	                        <fd-input id="id${property.name}"
	                            name="${property.name}"
	                            ng-required="${property.dataNotNull}"
	                            ng-model="entity.${property.name}"
	                            ng-readonly="true"
	                            type="number"
	                            placeholder="Enter ${property.widgetLabel}"
	                            class="right-align">
	                        </fd-input>
	                    </div>
                    </fd-form-item>
#elseif($property.widgetType == "MONTH")
                    <fd-form-item class="fd-row fd-form-item">
                    	<div class="fd-col fd-col-md--2">
                        	<fd-form-label for="id${property.name}" dg-required="${property.dataNotNull}" dg-colon="true">${property.widgetLabel}</fd-form-label>
                        </div>
                        <div class="fd-col fd-col-md--2">
	                        <fd-input id="id${property.name}"
	                            name="${property.name}"
	                            ng-required="${property.dataNotNull}"
	                            ng-model="entity.${property.name}"
	                            ng-readonly="true"
	                            type="month">
	                        </fd-input>
	                    </div>
                    </fd-form-item>
#elseif($property.widgetType == "WEEK")
                    <fd-form-item class="fd-row fd-form-item">
                    	<div class="fd-col fd-col-md--2">
                        	<fd-form-label for="id${property.name}" dg-required="${property.dataNotNull}" dg-colon="true">${property.widgetLabel}</fd-form-label>
                        </div>
                        <div class="fd-col fd-col-md--2">
	                        <fd-input id="id${property.name}"
	                            name="${property.name}"
	                            ng-required="${property.dataNotNull}"
	                            ng-model="entity.${property.name}"
	                            ng-readonly="true"
	                            type="week">
	                        </fd-input>
	                    </div>
                    </fd-form-item>
#elseif($property.widgetType == "TIME")
                    <fd-form-item class="fd-row fd-form-item">
                    	<div class="fd-col fd-col-md--2">
                        	<fd-form-label for="id${property.name}" dg-required="${property.dataNotNull}" dg-colon="true">${property.widgetLabel}</fd-form-label>
                        </div>
                        <div class="fd-col fd-col-md--2">
	                        <fd-input id="id${property.name}"
	                            name="${property.name}"
	                            ng-required="${property.dataNotNull}"
	                            ng-model="entity.${property.name}"
	                            ng-readonly="true"
	                            type="time">
	                        </fd-input>
	                    </div>
                    </fd-form-item>
#elseif($property.widgetType == "DATETIME-LOCAL")
                    <fd-form-item class="fd-row fd-form-item">
                    	<div class="fd-col fd-col-md--2">
                        	<fd-form-label for="id${property.name}" dg-required="${property.dataNotNull}" dg-colon="true">${property.widgetLabel}</fd-form-label>
                        </div>
                        <div class="fd-col fd-col-md--2">
	                        <fd-input id="id${property.name}"
	                            name="${property.name}"
	                            ng-required="${property.dataNotNull}"
	                            ng-model="entity.${property.name}"
	                            ng-readonly="true"
	                            type="datetime-local">
	                        </fd-input>
	                    </div>    
                    </fd-form-item>
#elseif($property.widgetType == "DATE")
                    <fd-form-item class="fd-row fd-form-item">
                    	<div class="fd-col fd-col-md--2">
                        	<fd-form-label for="id${property.name}" dg-required="${property.dataNotNull}" dg-colon="true">${property.widgetLabel}</fd-form-label>
                        </div>
                        <div class="fd-col fd-col-md--2">
	                        <fd-input id="id${property.name}"
	                            name="${property.name}"
	                            ng-required="${property.dataNotNull}"
	                            ng-model="entity.${property.name}"
	                            ng-readonly="true"
	                            type="date">
	                        </fd-input>
	                    </div>
                    </fd-form-item>
#elseif($property.widgetType == "TEXTAREA")
					<fd-form-item class="fd-row fd-form-item">
						<div class="fd-col fd-col-md--2">
							<fd-form-label for="id${property.name}" dg-required="${property.dataNotNull}" dg-colon="true">${property.widgetLabel}</fd-form-label>
						</div>
						<div class="fd-col fd-col-md--8">
							<fd-textarea id="id${property.name}"
								name="${property.name}"
								ng-required="${property.dataNotNull}"
								ng-model="entity.${property.name}"
								ng-readonly="true"
								placeholder="Enter ${property.widgetLabel}">
							</fd-textarea>
						</div>
					</fd-form-item>
#elseif($property.widgetType == "TEL")
                    <fd-form-item class="fd-row fd-form-item">
                    	<div class="fd-col fd-col-md--2">
                        	<fd-form-label for="id${property.name}" dg-required="${property.dataNotNull}" dg-colon="true">${property.widgetLabel}</fd-form-label>
                        </div>
                        <div class="fd-col fd-col-md--4">
	                        <fd-input id="id${property.name}"
	                            name="${property.name}"
	                            ng-required="${property.dataNotNull}"
	                            ng-model="entity.${property.name}"
	                            ng-readonly="true"
	                            type="tel"
	                            placeholder="Enter ${property.widgetLabel}">
	                        </fd-input>
	                    </div>
                    </fd-form-item>
#elseif($property.widgetType == "URL")
                    <fd-form-item class="fd-row fd-form-item">
                    	<div class="fd-col fd-col-md--2">
                        	<fd-form-label for="id${property.name}" dg-required="${property.dataNotNull}" dg-colon="true">${property.widgetLabel}</fd-form-label>
                        </div>
                        <div class="fd-col fd-col-md--8">
	                        <fd-input id="id${property.name}"
	                            name="${property.name}"
	                            ng-required="${property.dataNotNull}"
	                            ng-model="entity.${property.name}"
	                            ng-readonly="true"
	                            type="url"
	                            placeholder="Enter ${property.widgetLabel}">
	                        </fd-input>
	                     </div>
                    </fd-form-item>
#elseif($property.widgetType == "EMAIL")
                    <fd-form-item class="fd-row fd-form-item">
                    	<div class="fd-col fd-col-md--2">
                        	<fd-form-label for="id${property.name}" dg-required="${property.dataNotNull}" dg-colon="true">${property.widgetLabel}</fd-form-label>
                        </div>
                        <div class="fd-col fd-col-md--4">
	                        <fd-input id="id${property.name}"
	                            name="${property.name}"
	                            ng-required="${property.dataNotNull}"
	                            ng-model="entity.${property.name}"
	                            ng-readonly="true"
	                            type="email"
	                            placeholder="Enter ${property.widgetLabel}">
	                        </fd-input>
	                    </div>
                    </fd-form-item>
#else
                    <fd-form-item class="fd-row fd-form-item">
                    	<div class="fd-col fd-col-md--2">
                        	<fd-form-label for="id${property.name}" dg-required="${property.dataNotNull}" dg-colon="true">${property.widgetLabel}</fd-form-label>
                        </div>
                        <div class="fd-col fd-col-md--8">
	                        <fd-input id="id${property.name}"
	                            name="${property.name}"
	                            ng-required="${property.dataNotNull}"
	                            ng-model="entity.${property.name}"
	                            ng-readonly="true"
	                            type="text"
	                            placeholder="Enter ${property.widgetLabel}">
	                        </fd-input>
	                    </div>
                    </fd-form-item>
#end
#end
            </fd-fieldset>
        </fd-scrollbar>
    </body>

</html>
