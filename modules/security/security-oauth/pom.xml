<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.eclipse.dirigible</groupId>
		<artifactId>dirigible-security-parent</artifactId>
		<version>5.12.0-SNAPSHOT</version>
		<relativePath>../pom.xml</relativePath>
	</parent>

	<name>Security - OAuth</name>
	<artifactId>dirigible-security-oauth</artifactId>
    <packaging>jar</packaging>
    
    <build>
        <finalName>${project.artifactId}</finalName>
        <plugins>
            <plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>${maven.compiler.plugin.version}</version>
				<configuration>
					<source>${maven.compiler.source}</source>
					<target>${maven.compiler.target}</target>
					<debug>true</debug>
					<debuglevel>lines,vars,source</debuglevel>
				</configuration>
			</plugin>
        </plugins>
    </build>
    
    <dependencies>

        <!-- OAuth0 -->
		<dependency>
		    <groupId>com.auth0</groupId>
		    <artifactId>java-jwt</artifactId>
		    <version>3.11.0</version>
		</dependency>

        <!-- Commons -->
		<dependency>
		 	<groupId>org.eclipse.dirigible</groupId>
		 	<artifactId>dirigible-commons-config</artifactId>
		 	<version>5.12.0-SNAPSHOT</version>
		</dependency>

		<!-- API Facade HTTP -->
		<dependency>
		 	<groupId>org.eclipse.dirigible</groupId>
		 	<artifactId>dirigible-api-facade-http</artifactId>
		 	<version>5.12.0-SNAPSHOT</version>
		</dependency>

		<!-- Core Security -->
		<dependency>
		 	<groupId>org.eclipse.dirigible</groupId>
		 	<artifactId>dirigible-core-security</artifactId>
		 	<version>5.12.0-SNAPSHOT</version>
		</dependency>

    </dependencies>

	<properties>
		<license.header.location>../../../license-header.txt</license.header.location>
	</properties>
</project>
